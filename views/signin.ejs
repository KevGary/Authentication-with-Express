    <title><%= title %></title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' />
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <div class="container sign-in-up">
        <div class="row">
          <div class="form-title">Existing User</div>
          <div class="col-md-4 col-md-offset-4">
          <% if(errors.length > 0){ %>
            <% for (var i = 0; i < errors.length; i++){ %>
              <p><%= errors[i] %></p>
            <% } %>
          <% } %>
            <div class="text-center">
              <form action="/signin" method="post">
                <div class="form-group">
                  <div class="right-inner-addon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control input-lg" placeholder="Email Address" type="email" name="email" <% if(body.email){ %>
                      value=<%= body.email %>
                    <% } %>
                    >
                  </div>
                </div>
                <div class="form-group">
                  <div class="right-inner-addon">
                    <i class="fa fa-key"></i>
                    <input class="form-control input-lg" placeholder="Password" type="text" name="password" <% if(body.password){ %>
                      value=<%= body.password %>
                    <% } %>
                    >
                  </div>
                </div>
                <input class="btn btn-large btn-primary" type="submit" value="Signup">
              </form>
              <div class="existing">
                <form action="/signup" method="get">
                  <input class="existing" type="submit" name="existing-user" value="New User? Sign up."></div>
                </form>
            </div>
          </div>
        </div>
      </div>
